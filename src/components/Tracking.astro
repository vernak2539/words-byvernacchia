---
const isProduction = import.meta.env.PROD;
---

{
    isProduction && (
        <>
            <script
                async
                defer
                src="https://scripts.simpleanalyticscdn.com/latest.js"
            />
            <noscript>
                <img
                    src="https://queue.simpleanalyticscdn.com/noscript.gif"
                    alt=""
                    referrerpolicy="no-referrer-when-downgrade"
                />
            </noscript>
        </>
    )
}
