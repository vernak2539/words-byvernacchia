---
import Icon from "astro-icon";
interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---

<div class="tags-container">
    <div class="tag-icon">
        <Icon pack="mdi" name="tag" />
    </div>
    <ul class="tag-list">
        {
            tags.map((tag, index) => (
                <li>
                    {index ? ", " : ""} <a href={`/tags/${tag}`}>{tag}</a>
                </li>
            ))
        }
    </ul>
</div>

<style>
    .tags-container {
        font-size: 0.8rem;
        display: flex;
    }

    .tag-icon {
        width: 18px;
        height: 18px;
        margin-right: 3px;
    }

    .tag-list {
        display: flex;
        list-style: none;
        margin: 0;
        padding: 0;
        font-style: italic;
    }
</style>
