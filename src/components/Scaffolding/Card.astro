---
export interface Props {
    title: string;
    body: string;
    href: string;
    label?: string | undefined;
}

const { href, title, body, label } = Astro.props;
---

<!-- add banner variant (for latest) like github fork me... -->
<li class={`link-card${Boolean(label) ? " label-container" : ""}`}>
    <a href={href}>
        <h2>
            {title}
            <span>&rarr;</span>
        </h2>
        <p>
            {body}
        </p>
    </a>
    {label && <div class="label">{label}</div>}
</li>
<style>
    .link-card {
        list-style: none;
        display: flex;
        padding: 0.25rem;
        background-color: white;
        background-image: none;
        background-size: 400%;
        border-radius: 0.6rem;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow:
            0 4px 6px -1px rgba(0, 0, 0, 0.1),
            0 2px 4px -2px rgba(0, 0, 0, 0.1);
    }
    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: 1rem 1.3rem;
        border-radius: 0.35rem;
        color: #111;
        background-color: white;
        opacity: 0.8;
    }
    .link-card > a:hover {
        text-decoration: none;
    }
    h2 {
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        color: #773feb;
    }
    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
        color: #444;
    }
    .link-card:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }
    .link-card:is(:hover, :focus-within) h2 {
        color: rgb(var(--accent));
    }
    .label-container {
        position: relative;
    }
    .label {
        position: absolute;
        top: -0.67rem;
        left: 0.75rem;
        padding: 0.2rem 1rem;
        /* background-color: #ee1a36; */
        background-image: var(--accent-gradient);
        -webkit-background-clip: border-box;
        -webkit-text-fill-color: #fff;
        background-size: 400%;
        background-position: 0%;
        border-radius: 0.5rem;
        font-size: 0.75rem;
        font-weight: 800;
    }
</style>
