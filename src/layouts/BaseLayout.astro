---
import BaseHead from "../components/BaseHead.astro";
import SimpleAnalyticsFooter from "../components/SimpleAnalyticsFooter.astro";
import SiteTitle from "../components/SiteTitle.astro";
import Tracking from "../components/Tracking.astro";
import Search from "../components/Search";
import { SITE_DESCRIPTION, SITE_TITLE } from "../constants";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <Tracking />
    </head>
    <body>
        <main class="container">
            <div class="header-container">
                <div>
                    <SiteTitle variant="home" />
                </div>
                <div>
                    <Search client:load />
                </div>
            </div>
            <p class="site-tagline">{SITE_DESCRIPTION}</p>
            <slot />
            <SimpleAnalyticsFooter />
        </main>
    </body>
</html>
